{
  "manifest_version": 3,
  "name": "Perplexity Advanced Copier",
  "version": "1.1",
  "description": "Копирование диалогов с Perplexity в текстовом и JSON форматах для переноса контекста",
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.perplexity.ai/*"],
      "js": [
        "src/utils/formatters.js",
        "src/content/dialog-extractor.js",
        "src/content/code-analyzer.js",
        "src/content/ai-processor.js",
        "src/content/ui-components.js",
        "src/content/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "permissions": ["clipboardWrite", "storage", "tabs"]
}
